<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @cocktail.name %></h1>
      <%= link_to "Voir les coquetels",  cocktails_path %>
      <%= link_to "Ajouter une dose", new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Delete</th>
            <th>Add</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
          <tr>
            <td>
              <%= dose.ingredient.name %>
            </td>
            <td>
              <%= dose.description %>
            </td>
            <td>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-trash destroy_dose"></i>
              <% end %>
            </td>
            <td>
              <%= link_to new_cocktail_dose_path(@cocktail) do %>
              <i class="fas fa-plus"></i>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
